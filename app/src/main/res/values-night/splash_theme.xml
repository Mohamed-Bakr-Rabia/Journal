<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Newsfeed</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/white_200</item>
        <item name="android:navigationBarColor">@color/white_200</item>
    </style>
</resources>